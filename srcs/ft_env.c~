#include "../headers/minishell.h"

static void	affichage(char **env)
{
	int i;

    i = 0;
    while (env[i] != NULL)
    {
        ft_putstr(env[i]);
        ft_putchar('\n');
        i++;
    }
}

void		ft_env(char **env, char **commande)
{
	char	**tempenv;

	if (commande[1] == NULL)
		affichage(env);
	else if (ft_strcmp(commande[1], "-i") == 0)
	{
		tempenv = (char**)malloc(1 * sizeof(char*));
		*tempenv = NULL;
		ft_exec(commande[2], &(commande[2]), tempenv);
		free(tempenv);
	}
	else
		ft_putstr("Env : erreur\n");
}
